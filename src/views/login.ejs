<%- include("./partials/head") %>

<body>
    
    <%- include("./partials/header") %>

    <main>
      <h2 class="margin-h2-login centrar-login">DigitalArts</h2>
      
      <form action="/usersDb/login" method="POST" class="formValid" >
        <ul class="errores"> 
        
        </ul>
      <div class="centrar-login">
        <div class="login-box">
           <label class="weight-label">Email:</label>
           <input type="email" name="email" class="control" id ="email" value="<%= locals.oldData ? oldData.email : null %>" autofocus>
           <% if(locals.errors && errors.email) { %>
            <div class="red-message-register">
                <%= errors.email.msg %>
            </div>
        <% } %>
         </div>
         <div class="div1"></div>

        <div class="login-box">
           <label class="weight-label">Contraseña:</label>
           <input type="password" name="password" class="control" id="password" >
           <% if(locals.errors && errors.password) { %>
            <div class="red-message-register">
                <%= errors.password.msg %>
            </div>
        <% } %>
         </div>
         <div class="div2"></div>
       
        <div class="remember-box">
           <input type="checkbox" name="remember_user" class="">
           <label class="weight-label">Recuerdame</label>
        </div>

        <div class="">
           <button type="submit" value="login" class="control button-login">Log In</button>
        </div>
      </div>
      </form>
      <p class="centrar-login weight-label">¿Olvidaste tu contraseña? <a href="register"> Click Aquí </a></p>
      <p class="centrar-login margin-button-login weight-label">¿No tenes una cuenta?  <a href="/usersDb/register">  REGISTRATE </a></p>
   
    </main>
    
    <%- include("./partials/footer") %>
    <script src="/js/login.js" ></script>
  </body>
  </html>
