
<%- include("./partials/head") %>

<body>
	
	<%- include('partials/header.ejs') %>
	
  <main>

	<div >
		<div>
			<div>
				<h2>Estás editando: <i><%= cuadrosEditar.name %></i></h2>
			</div>
		</div>
		<div>
			<form action="/products/edit/<%= cuadrosEditar.id %>?_method=PUT" method="POST">
				<div>
					<div>
						<label for="category" class="form-label">Categoría del producto:</label>
						<input type="text" id="category" name="category"  class="" value="<%= cuadrosEditar.category%>">
					</div>
					<div>
						<label for="name" class="form-label">Nombre del producto:</label>
						<input type="text" id="name" name="name"  class="" value="<%= cuadrosEditar.name%>">
					</div>
					<div>
						<label for="size" class="form-label">Medida del producto:</label>
						<input type="text" id="size" name="size"  class="form-input" value="<%= cuadrosEditar.size %>"> 
					</div>
                    <div>
						<label for="description" class="form-label">Descripción:</label>
						<input name="description" id="description" class="form-input" value="<%= cuadrosEditar.description %>">
					</div>
					<div>
						<label for="material" class="form-label">Material:</label>
						<input type="text" id="material" name="material"  class="form-input" value="<%= cuadrosEditar.material %>">
					</div>
                    <div>
						<label for="price" class="form-label">Precio:</label>
						<input type="text" id="price" name="price"  class="form-input" value="<%= cuadrosEditar.price %>">
					</div>
					
					<div class="col-12">
						<button type="submit" class="buy-now-button">Guardar producto</button>
					</div>
				</div>
			</form>
		</div>
	</div>
	
 </main>
	<%- include('partials/footer') %>
	
</body>	
</html>