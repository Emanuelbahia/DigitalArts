<%- include("./partials/head") %>

<body>

    <%- include("./partials/header") %>

    <main>
      
        <div class="contenedor-cuadros-espatula">
        
          <% categoryProducts.forEach(cuadro => {  %>

           <div class="item padding-bottom">  
              <div id="cuadro" class="clase-cuadro">
                 <a href="/productsDb/detail/<%= cuadro.id %>"><img class="img-cuadro-detail" src="../images/<%= cuadro.image %>"></a>
              </div>        
               <div class="contenedor-detalle-carrito"> 
                  <div class="caja-detalle-cuadro detail-none" >
                    <p class="tamaño-letra-detalle-cuadro">
                       <b> <%= cuadro.description.description %></b><br>
                       <b>Dimensiones: <%= cuadro.size %></b> <br>
                       <b><%= cuadro.material.material %></b><br>
                    </p>
                  </div>
                  <div class="añadir-carrito-centrado">
                      <a href="/carrito/<%= cuadro.id %>"><button class="añadir-carrito">Agregar al carrito</button></a>
                  </div>
               </div> 
           </div>

           <% }) %>
       
        </div>
             
    </main>

    <%- include("./partials/footer") %>
    <script src="/js/products.js" ></script>
</body>

</html>