<%- include("./partials/head") %>

<body>
  
  <%- include("./partials/header") %>

    <main>

      <div class="container wow fadeIn animated padding-table-carrito">
        <h2 class="padding-top-h2 h2 text-center"> Productos en mi carrito</h2>
        <div class="card ">
            <div class="card-body">
                <table class="table table-responsive-md mb-0">
                    <thead>
                        <tr>
                            <th style="width: 50px;">
                                <strong>#</strong>
                            </th>
                            <th class="th-lg">
                                <strong>Imagen</strong>
                            </th>
                            <th class="th-lg">
                                <strong>Producto</strong>
                            </th>
                            <th class="th-lg ">
                                <strong>Precio</strong>
                            </th>
                            <th class="text-center">
                                <strong>Cantidad</strong>
                            </th>
                           
                            <th class="text-center">
                                <strong>Subtotal</strong>
                            </th>
                            <th class="text-center">
                                <strong></strong>
                            </th>
                            <th style="width: 50px;"></th>
                        </tr>
                    </thead>
                    <tbody class="cartRows">
                        <tr id="row">
                            <th class="c1 "></th>
                            <td class="c2 "></td>
                            <td class="c3 "></td>
                            <td class="c4 text-center"></td>                        
                            <td class="c5 text-center"></td>
                            <td class="c6 text-center"></td>
                     </tr>
                          
                     
                    </tbody>
                </table>
                <div class="card-footer text-right total-right">
                    <h2>Total: <span class="totalAmount total-carrito">$ 0</span></h2>
                </div>
            </div>
        </div>
        <br/>
        <div class="card">
            <div class="card-header text-center">
                Terminar la compra
            </div>
            <form class="card-body" id="checkoutCart">
                <div class="row">
                    <div class=" col-md-6 mb-4">
                        <label for="country">Tipo Envio</label>
                        <select class="custom-select d-block height-select" id="shippingMethod" name=" shippingMethod"
                            required="">
                            <option value="">Elegir...</option>
                            <option value="Cadete">Cadete</option>
                            <option value="Correo">Correo Argentino</option>
                            <option value="Andreani">Andreani</option>
                            <option value="DHL">DHL</option>
                        </select>
                        <div class="invalid-feedback">
                            Elija un tipo de envio.
                        </div>

                    </div>
                    <div class=" col-md-6 mb-4">
                        <label for="country">Pago</label>
                        <select class="custom-select d-block height-select" id="paymentMethod" name="paymentMethod"
                            required="">
                            <option value="">Elegir...</option>
                            <option value="Efectivo">Efectivo</option>
                            <option value="Débito">Tarjeta Débito</option>
                            <option value="Crédito">Tarjeta Crédito</option>
                        </select>
                        <div class="invalid-feedback">
                            Elija un tipo de envio.
                        </div>

                    </div>
                </div>
                <div class="center-button-carrito">
                <button class="btn btn-primary btn-lg btn-block waves-effect waves-light"
                    type="submit">Comprar</button>
                </div>
            </form>
        </div>
    </div>
    </main>
    
    <%- include("./partials/footer") %>
    <script src="/js/carrito.js" ></script>
    <script src="/js/addToCart.js" ></script>
</body>
</html>